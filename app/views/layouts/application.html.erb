<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">
      <div id="cart">
        <%= render @cart %>
      </div>
      <ul>
        <li><%= link_to 'Home', store_path %></li>
        <li><%= link_to 'Questions', '#' %></li>
        <li><%= link_to 'News', '#' %></li>
        <li><%= link_to 'Contact', '#' %></li>
      </ul>
      <small id="page_date"><%= time_tag(Time.now) %></small>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
